# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
unsetopt beep
bindkey -v
# End of lines configured by zsh-newuser-install
bindkey -M vicmd '?' history-incremental-search-backward

# autoload -U promptinit
# promptinit

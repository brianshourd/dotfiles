# export PROMPT="%K{blue}%n@%m%k %B%F{cyan}%(4~|...|)%3~%F{white} %# %b%f%k "
if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
    # This one is blue
    export PROMPT="%F{blue}%B%K{blue}█▓▒░%F{white}%K{blue}%B%~/%b%F{blue}%K{black}█▓▒░%F{white}%K{black}%B <Remote>
    %{%}%K{black}%F{white}%B%#%b%f%k "
else
    # This one is green
    export PROMPT="%F{green}%B%K{green}█▓▒░%F{white}%K{green}%B%~/%b%F{green}%K{black}█▓▒░%F{white}%K{black}%B
    %{%}%K{black}%F{white}%B%#%b%f%k "
fi

alias win='ssh BShourd@10.0.2.2'

# add ~/bin to path
PATH=${PATH}:"$HOME/bin"

export PATH

# Base16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/base16-default.dark.sh"
[[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
